            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>-->

    <Shell.FlyoutHeader>
        <StackLayout Orientation="Horizontal" Spacing="20" Padding="20,0">
            <Label Text="Tsundoku"
                   TextColor="{StaticResource Primary}"
                   FontAttributes="Bold"
                   HorizontalOptions="StartAndExpand" />
            <Label Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{0:dd MMM yyyy}'}"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="End" />
        </StackLayout>
    </Shell.FlyoutHeader>

    <!--<Shell.FlyoutFooter>
        <controls:FlyoutFooter />
    </Shell.FlyoutFooter>-->

    <FlyoutItem Route="bøger" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Route="MainPage"
            Title="Bøger"
            Icon="book_transparent.png"
            Style="{StaticResource DomesticShell}"
            ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Route="bøger" FlyoutDisplayOptions="AsMultipleItems" IsEnabled="False">
        <ShellContent
            Route="Review"
            Title="Repetér"
            Icon="bulb_transparent.png"
            Style="{StaticResource DomesticShell}"/>
    </FlyoutItem>

    <FlyoutItem Route="bøger" FlyoutDisplayOptions="AsMultipleItems" >
        <ShellContent
            Route="Settings"
            Title="Opsætning"
            Icon="settings_transparent.png"
            Style="{StaticResource DomesticShell}"
            ContentTemplate="{DataTemplate local:Settings}" />
    </FlyoutItem>

    <FlyoutItem Route="bøger" FlyoutDisplayOptions="AsMultipleItems" IsEnabled="True">
        <ShellContent
            Route="About"
            Title="Om"
            Icon="info_transparent.png"
            Style="{StaticResource DomesticShell}"
            ContentTemplate="{DataTemplate local:About}" />
    </FlyoutItem>
</Shell>

